package blocks

type BroadcastLine struct {
	BlockData
	b0 string
	b1 []string
}

func (b *BroadcastLine) Update() {
	b.in = Blocks[b.b0].Get()
	b.out = b.in

	for _, v := range b.b1 {
		Blocks[v].Put(b.out)
	}
}

func ConstructBroadcastLine(words []string) Block {
	b0 := words[0]
	b1 := words[1:]

	b := &Line{b0: b0, b1: b1}
	return b
}

var ConstructBroadcastLineOk = AddConstructor("BroadcastLine", ConstructBroadcastLine)
